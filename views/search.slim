	          label
	            input type="checkbox" /
	            | Checkbox
	          label
	            input disabled="" type="checkbox" /
	            | Disabled Checkbox
	    .form-group
	      .col-md-offset-2.col-md-10
	        .togglebutton
	          label
	            input checked="" type="checkbox" /
	            | Toggle button
	    .form-group
	      label.col-md-2.control-label for="inputFile"  File
	      .col-md-10
	        input.form-control placeholder="Browse..." readonly="" type="text" /
	        input#inputFile multiple="" type="file" /
	    .form-group
	      label.col-md-2.control-label for="textArea"  Textarea
