.container
	<form class="form-inline" action="/tours" method='post'>
	  <div class="form-group">
	    <input type="text" class="form-control" id="tour" name="tour" placeholder="Where do you want to go?" value = #{@country}>
	  </div>
	  <button type="submit" id="btn_search" class="btn btn-primary">Search Tours</button>
	</form>

	form.form-horizontal
		fieldset
	    legend Optiona Search
	    .form-group
	      label.col-md-2.control-label for="inputEmail"  Email
	      .col-md-10
	        input#inputEmail.form-control placeholder="Email" type="email" /
	    .form-group
	      label.col-md-2.control-label for="inputPassword"  Password
	      .col-md-10
	        input#inputPassword.form-control placeholder="Password" type="password" /
	        /!
